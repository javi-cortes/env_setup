# pactl list short  sinks # check the first number and choose that one as the sink

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 4 +1% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 4 -1% #decrease sound volume
#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound


bindsym XF86AudioMute exec "amixer -D pulse set Master 1+ toggle"

