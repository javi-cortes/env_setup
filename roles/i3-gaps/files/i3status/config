order += "memory"
order += "volume master"
order += "tztime local"


path_exists VPN {
     # path exists when a VPN tunnel launched by nmcli/nm-applet is active
     # set your corresponding tunnel (tun0/tun1)
     # check it with: nmcli connection show
     path = "/proc/sys/net/ipv4/conf/tun1"
}
